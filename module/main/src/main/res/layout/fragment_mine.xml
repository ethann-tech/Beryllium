<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragment.FragmentSystem">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/view_common_toolbar" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_developer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_10">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_developer_options" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_developer_master_content"
                style="@style/TextViewMainStyle"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/default_develop_options"
                app:layout_constraintBottom_toTopOf="@id/tv_developer_sub_content"
                app:layout_constraintStart_toEndOf="@id/image_developer"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_developer_sub_content"
                style="@style/TextViewSecondStyle"
                android:text="环境设置"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_developer_master_content"
                app:layout_constraintTop_toBottomOf="@id/tv_developer_master_content" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_right_light" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
