<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/bg_welcome</item>
    </style>

    <style name="NavTabItemStyle" parent="LayoutWidthWrapHeightMatch">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    <style name="style_mine_service">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_58</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_222427</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:drawablePadding">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>