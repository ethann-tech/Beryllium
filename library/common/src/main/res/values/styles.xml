<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Common">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="TextViewMainStyle" parent="LayoutWidthWrapHeightWrap">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/color_222427</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextViewSecondStyle" parent="LayoutWidthWrapHeightWrap">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@color/color_898e92</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="TextViewSecondStyle2" parent="LayoutWidth0HeightWrap">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@color/color_898e92</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppCompatButtonViewMainStyle" parent="LayoutWidthMatchHeightWrap" >
        <item name="android:layout_height">@dimen/dp_48</item>
<!--        <item name="android:background">@drawable/bg_button_main_style</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="backgroundTint">@color/color_222427</item>
        <item name="backgroundTintMode">multiply</item>
    </style>
</resources>