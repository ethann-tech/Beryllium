<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HuaweiLoadingView">
        <!--控件大小-->
        <attr name="hw_size" format="dimension" />
        <!--控件颜色-->
        <attr name="hw_color" format="color|reference" />
        <!--转一圈花费时长-->
        <attr name="hw_duration" format="integer"/>
    </declare-styleable>

    <!-- 视频封面 -->
    <declare-styleable name="VideoImageView">
        <!-- 比例 -->
        <attr name="ratio" format="float" />
        <!-- 宽度偏差 -->
        <attr name="offset" format="integer" />
    </declare-styleable>
</resources>